<!-- Flash -->
<aside id="flash_<%= message_type %>" class="<%= ApplicationHelper.flash_class(message_type) %>" role="alert">
  <i class="<%= ApplicationHelper.flash_icon(message_type) %>"></i>

  <%= message %>

  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</aside>
