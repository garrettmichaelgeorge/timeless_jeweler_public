<!-- Flash -->
<% flash.each do |message_type, message| %>
  <% next if message_type == 'timedout' %>

  <%= tag.aside id: id_for(message_type),
                class: css_classes_for(message_type),
                role: 'alert' do %>

      <%= icon_for message_type %>
      <%= message %>
      <%= close_button(dismiss: 'alert') %>

    <% end %>
<% end %>
