<%= content_tag :fieldset, id: 'gemstone_fields',
                           class: 'nested-fields form-group',
                           data: { new_record: new_record? } do %>
  <legend><small>Gemstone</small></legend>

  <%= content_tag :div, class: 'form-row' do %>
    <%= f.association :category, label_method: :name,
                                 prompt: 'Category', label: false,
                                 wrapper_html: { class: 'col' }, input_html: { class: 'custom-select' } %>
    <%= f.input :carat, placeholder: 'Carat', label: false,
                        wrapper_html: { class: 'col' }, input_html: { class: 'custom-float' } %>

    <%= content_tag :div, class: 'col-auto' do %>
      <%= render Buttons::RemoveNestedFieldComponent.new %>
    <% end %>

    <%# f.association :cut %>
    <%# f.association :color %>
    <%# f.association :clarity %>
  <% end %>
<% end %>
