<% title = 'New Item Intake' %>
<% pre_title = 'Inventory' %>

<% provide :title, title %>

<div class="row justify-content-center">
  <div class="col-12 col-lg-10 col-xl-8">
    <%= render PageHeaderComponent.new(title: title, pre_title: pre_title) %>

    <%= simple_form_for Item.new, wrapper_mappings: { radio_buttons: :custom_collection },
                                  html: { id: 'category_switcher',
                                          class: 'category_switcher' } do |f| %>
      <%= f.input :category, as: :radio_buttons,
                             collection: %w[Piece LooseGemstone MiscellaneousItem],
                             label: 'Choose a category',
                             input_html: { data: { reflex: 'input->Intake#change_category' } } %>
    <% end %>

    <%= render IntakeFormSwitcherComponent.new(item: @item) %> 
  </div>
</div>
