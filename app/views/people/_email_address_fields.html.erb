  <div class='form-group'>

    <%= f.label :email_address %>

    <div class='input-group mb-4 show' id='emailAddressInputGroup'>
      <%= f.input_field :email_address, class: 'form-control' %>
      <div class='input-group-append'>
        <%= f.hidden_field :_destroy %>
        <%= link_to 'remove', '#emailAddressInputGroup', class: 'btn btn-danger remove-field', data: { toggle: '' }, role: 'button' %>
      </div>
    </div>

  </div>