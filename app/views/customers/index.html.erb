<p id="notice"><%= notice %></p>

<%= render 'layouts/jumbotron' %>

<h1 class="text-center">Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Gender</th>
      <th>Ring size</th>
      <th>Ring size notes</th>
      <th>Necklace length</th>
      <th>Necklace length notes</th>
      <th>Birthday</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.household.household_name %></td>
        <td><%= customer.gender %></td>
        <td><%= customer.ring_size %></td>
        <td><%= customer.ring_size_notes %></td>
        <td><%= customer.necklace_length %></td>
        <td><%= customer.necklace_length_notes %></td>
        <td><%= customer.birthday %></td>
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Remove', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
