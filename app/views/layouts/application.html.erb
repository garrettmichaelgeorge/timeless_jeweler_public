<% require "browser" %>

<!DOCTYPE html>
<html class="" lang="en">
  <head>
    <title><%= yield :title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= render 'layouts/components/shim' %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <!-- <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %> -->
    <%= javascript_packs_with_chunks_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="<%= yield :body_class %>">
    <%= render SidebarComponent.new(browser: @browser) if user_signed_in? %>

    <!-- MAIN CONTENT ================================================== -->
    <main role="main" class="main-content pb-6">
      <div class="container-fluid">

        <% flash.each do |message_type, message| %>
        <%= render FlashComponent.new(message_type: message_type, message: message) %>
        <% end %>

        <%= yield %>

      </div>
    </main>

    <!-- Rails debug (development only) -->
    <%= render DebugComponent.new(params: params) if Rails.env.development? %>
  </body>
</html>
