                     description: 'Description',
                     brand: 'Brand',
                     size: 'Size',
                     size_unit: 'Unit',
                     weight: 'Weight',
                     weight_unit: 'Unit',
                     misc_measurements: 'Misc. Measurements',
                     cost: 'Cost',
