<p id="notice"><%= notice %></p>

<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Descr.</th>
      <th>Metal</th>
      <th>Purity</th>
      <th>Size</th>
      <th>Length</th>
      <th>Weight</th>
      <th>Misc. meas.</th>
      <th>Color</th>
      <th>Clarity</th>
      <th>Rpt no</th>
      <th>Cost</th>
      <th>Notes</th>
      <th>Retail price</th>
      <th>Source</th>
      <th>Date sold</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.narrative_description %></td>
        <td><%= product.metal %></td>
        <td><%= product.purity %></td>
        <td><%= product.size %></td>
        <td><%= product.length %></td>
        <td><%= product.weight %></td>
        <td><%= product.miscellaneous_measurements %></td>
        <td><%= product.color %></td>
        <td><%= product.clarity %></td>
        <td><%= product.report_number %></td>
        <td><%= product.cost %></td>
        <td><%= product.notes %></td>
        <td><%= product.retail_price %></td>
        <td><%= product.source %></td>
        <td><%= product.date_sold %></td>
        <td><%= product.customer_id %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

