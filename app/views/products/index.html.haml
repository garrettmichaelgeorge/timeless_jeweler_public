- title = 'Products'
- pre_title = 'Overview'
- provide(:title, title)
- provide(:body_class, '')

= render(PageHeaderComponent.new(title: title,
  pre_title: pre_title,
  buttons: [{ text: 'New Product',
    link: new_product_path,
    options: nil }],
  tabs: nil))

= render(TableIndexComponent.new(title: title,
  columns: [{ value: :id },
    { value: :name, label: "Name" },
    { value: :brand },
    { value: :cost },
    { value: :price },
    { value: :size },
    { value: :size_unit },
    { value: :weight },
    { value: :weight_unit },
    { value: :misc_measurements },
    { value: :description }],
  resources: @products))
