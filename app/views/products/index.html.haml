- title = 'Products'
- pre_title = 'Overview'
- provide(:title, title)
- provide(:body_class, '')

= render(PageHeaderComponent.new(title: title,
  pre_title: pre_title,
  buttons: [{ text: 'New Product',
    link: new_product_path,
    options: nil }],
  tabs: nil))

= render(TableIndexComponent.new(title: title,
  columns: [{ value: :id },
    { value: :category_name },
    { value: :name, label: "Name" },
    { value: :brand },
    { value: :cost },
    { value: :price },
    { value: :size, label: "Size" },
    { value: :size_unit, label: "Size Unit" },
    { value: :weight, label: "Wt" },
    { value: :weight_unit, label: "Wt Unit" },
    { value: :misc_measurements }],
  resources: @products,
  restful_actions: [:show, :edit, :destroy]))
